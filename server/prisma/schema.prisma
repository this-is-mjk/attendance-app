generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN 
  USER
  OBSERVER
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Attendance {
  id         Int      @id @default(autoincrement())
  present Boolean
  userId     Int
  time       DateTime @default(now())
  distance Float
  xCoordinate  Float
  yCoordinate  Float
  // relation to event
  event Event @relation(fields: [eventId], references: [id])
  eventId Int
}

// show in the profile section
model Profile {
  name       String
  gender     Gender
  position   String
  user       User   @relation(fields: [userId], references: [employeeId])
  userId     Int    @unique
}

model User {
  employeeId    Int          @id @unique
  password      String       
  profile       Profile?
  role          Role         @default(USER)
  events        Event[]      @relation("UserEvents")
  createdEvents Event[]
}
model Event {
  id               Int       @id @default(autoincrement())
  // Event Details
  title            String
  description      String?
  date             DateTime  @default(now())
  // location details
  locationName String
  xCoordinate  Float
  yCoordinate  Float
  // Creator of the event
  creator          User      @relation(fields: [creatorId], references: [employeeId])
  creatorId        Int
  assignedOfficers User[]    @relation("UserEvents")
  // Sub events and parent event
  subEvents        Event[]   @relation("subEvents")
  parentEvent      Event?    @relation("subEvents", fields: [parentEventId], references: [id])
  parentEventId    Int?
  // Attendace
  attendance Attendance[]
}